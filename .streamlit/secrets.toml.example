# Streamlit Secrets 配置示例
# 复制此文件为 .streamlit/secrets.toml 并填入实际值
# 注意：不要提交 secrets.toml 到 GitHub！

# Google Sheets 配置
GOOGLE_SHEETS_ID = "your-spreadsheet-id-here"

[google_sheets]
# 注意：本地使用 google_credentials.json 文件，不需要在这里配置 credentials
# credentials 只在 Streamlit Cloud 中使用

# API 分类器配置（可选）
[api]
# 启用 API 分类可以提升精准度（从 70-80% 到 90-95%）
classifier_enabled = false  # 设置为 true 启用 API 分类
provider = "openai"  # 或 "anthropic"

# 个人测试账号（本地开发）
# openai_api_key = "sk-个人-API-key"

# 公司账号（生产环境）
# openai_api_key = "sk-公司-API-key"

# 可选配置
# openai_model = "gpt-4o-mini"  # 默认是 gpt-4o-mini
# anthropic_api_key = "sk-ant-..."  # 如果使用 Anthropic
# anthropic_model = "claude-3-haiku-20240307"  # 可选
